<Page x:Class="BankSystem_C.EnterByIIN"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BankSystem_C"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EnterByIIN">

    <Grid>
        <TextBox x:Name="iinTextBox" Height="50" Width="520"></TextBox>
        <TextBlock Height="50" Width="520" Margin="0,0,0,140" FontSize="20" Text="Введите ИИН" Background="Snow" Foreground="Black"></TextBlock>
        <Button Height="40" Width="180" Margin="0,140,0,0" Content="Войти" Click="Enter"></Button>
    </Grid>
</Page>
